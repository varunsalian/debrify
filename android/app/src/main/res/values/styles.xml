<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Theme applied to the Android Window while the process is starting when the OS's Dark Mode setting is off -->
    <style name="LaunchTheme" parent="@android:style/Theme.Light.NoTitleBar">
        <item name="android:windowBackground">@drawable/launch_background</item>
    </style>
    <!-- Theme applied to the Android Window as soon as the process has started.
         This theme determines the color of the Android Window while your
         Flutter UI initializes, as well as behind your Flutter UI while its
         running.
         
         This Theme is only used starting with V2 of Flutter's Android embedding. -->
    <style name="NormalTheme" parent="@android:style/Theme.Light.NoTitleBar">
        <item name="android:windowBackground">?android:colorBackground</item>
    </style>
    <style name="DebrifyTvChipButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/debrify_tv_premium_button_bg</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/netflix_text_primary</item>
        <item name="android:textSize">11sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:minHeight">32dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:layout_marginEnd">6dp</item>
        <item name="android:elevation">8dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:translationZ">2dp</item>
    </style>

    <style name="TvBadge">
        <item name="android:background">@drawable/tv_badge_bg</item>
        <item name="android:textColor">#E6FFFFFF</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="TvChip">
        <item name="android:background">@drawable/tv_chip_bg</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:paddingLeft">18dp</item>
        <item name="android:paddingRight">18dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:clickable">true</item>
        <item name="android:foreground">?android:selectableItemBackground</item>
        <item name="android:elevation">6dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- ═══════════════════════════════════════════════════════════════════════
         CINEMA MODE - Premium Control Button Styles
         ═══════════════════════════════════════════════════════════════════════ -->

    <!-- Standard control button (Audio, Subs, Aspect, etc.) -->
    <style name="CinemaControlButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/cinema_button_bg</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/cinema_control_button_text</item>
        <item name="android:textSize">10sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:minHeight">32dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:drawableTint">@color/cinema_control_button_icon</item>
        <item name="android:layout_marginEnd">4dp</item>
        <item name="android:elevation">4dp</item>
        <item name="android:stateListAnimator">@animator/cinema_button_state</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
    </style>

    <!-- Hero Play/Pause button (larger, signature color) -->
    <style name="CinemaPlayButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/cinema_play_button_bg</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/cinema_play_button_text</item>
        <item name="android:textSize">11sp</item>
        <item name="android:fontFamily">sans-serif-bold</item>
        <item name="android:letterSpacing">0.03</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:minHeight">36dp</item>
        <item name="android:minWidth">72dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingStart">14dp</item>
        <item name="android:paddingEnd">14dp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:drawablePadding">6dp</item>
        <item name="android:drawableTint">@color/cinema_play_button_icon</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:layout_marginEnd">4dp</item>
        <item name="android:elevation">8dp</item>
        <item name="android:stateListAnimator">@animator/cinema_play_button_state</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
    </style>

    <!-- ═══════════════════════════════════════════════════════════════════════
         STREAMING MODE - Modern Apple TV+ / Netflix Style Controls
         ═══════════════════════════════════════════════════════════════════════ -->

    <!-- Icon-only control button (Audio, Subs, Aspect, etc.) -->
    <style name="StreamingIconButton">
        <item name="android:background">@drawable/streaming_control_button_bg</item>
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:minWidth">40dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:tint">@color/streaming_icon_tint</item>
        <item name="android:layout_marginStart">2dp</item>
        <item name="android:layout_marginEnd">2dp</item>
    </style>

    <!-- Play/Pause button - Slightly larger with subtle idle highlight -->
    <style name="StreamingPlayButton">
        <item name="android:background">@drawable/streaming_play_button_bg</item>
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:tint">@color/streaming_icon_tint</item>
        <item name="android:layout_marginStart">6dp</item>
        <item name="android:layout_marginEnd">6dp</item>
    </style>

    <!-- ═══════════════════════════════════════════════════════════════════════
         TV BROADCAST MODE - Sports Channel Style Controls
         ESPN/Fox Sports inspired - Bold graphics, chunky buttons with labels
         ═══════════════════════════════════════════════════════════════════════ -->

    <!-- Standard TV control button (icon + label, vertical stack) -->
    <style name="TvControlButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:background">@drawable/tv_control_button_bg</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:clickable">true</item>
    </style>

    <!-- TV Play/Pause button - Larger, more prominent -->
    <style name="TvControlButtonPlay">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:background">@drawable/tv_control_button_bg</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:clickable">true</item>
    </style>

</resources>
