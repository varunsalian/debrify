<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Subtle shadow for depth -->
    <item>
        <shape android:shape="oval">
            <size
                android:width="16dp"
                android:height="16dp" />
            <solid android:color="#40000000" />
        </shape>
    </item>

    <!-- Main solid white thumb -->
    <item
        android:top="1dp"
        android:left="1dp"
        android:right="1dp"
        android:bottom="1dp">
        <shape android:shape="oval">
            <size
                android:width="14dp"
                android:height="14dp" />
            <solid android:color="@color/netflix_seekbar_thumb" />
        </shape>
    </item>

</layer-list>