<?xml version="1.0" encoding="utf-8"?>
<!-- Cinema Mode: Premium Floating Dock Background
     Inspired by macOS dock + Apple TV glass morphism -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Outer glow / ambient shadow -->
    <item android:bottom="2dp" android:left="4dp" android:right="4dp" android:top="0dp">
        <shape android:shape="rectangle">
            <corners android:radius="28dp" />
            <solid android:color="#40000000" />
        </shape>
    </item>

    <!-- Main frosted glass body -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="24dp" />
            <solid android:color="#26181820" />
        </shape>
    </item>

    <!-- Inner gradient for depth -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="24dp" />
            <gradient
                android:angle="90"
                android:startColor="#0D000000"
                android:centerColor="#00000000"
                android:endColor="#0DFFFFFF"
                android:type="linear" />
        </shape>
    </item>

    <!-- Top highlight stroke -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="24dp" />
            <stroke
                android:width="1dp"
                android:color="#1AFFFFFF" />
        </shape>
    </item>

</layer-list>
