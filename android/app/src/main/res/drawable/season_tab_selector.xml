<?xml version="1.0" encoding="utf-8"?>
<!-- Cinema Mode Season Tabs - Netflix Red Theme -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Selected/Active season - Netflix Red -->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="#E50914"/>
            <corners android:radius="6dp"/>
        </shape>
    </item>

    <!-- Focused season tab -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="#33E50914"/>
            <stroke android:width="2dp" android:color="#E50914"/>
            <corners android:radius="6dp"/>
        </shape>
    </item>

    <!-- Default state - Dark with subtle border -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#1A1A2E"/>
            <stroke android:width="1dp" android:color="#33FFFFFF"/>
            <corners android:radius="6dp"/>
        </shape>
    </item>
</selector>
