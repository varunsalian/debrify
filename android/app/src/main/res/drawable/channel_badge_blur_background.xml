<?xml version="1.0" encoding="utf-8"?>
<!-- Glassy blur effect background for channel badge -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Outer glow/shadow effect -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#20000000" />
            <corners android:radius="10dp" />
        </shape>
    </item>

    <!-- Main frosted glass background -->
    <item
        android:left="1dp"
        android:top="1dp"
        android:right="1dp"
        android:bottom="1dp">
        <shape android:shape="rectangle">
            <!-- Semi-transparent dark glass -->
            <solid android:color="#CC000000" />
            <corners android:radius="9dp" />
        </shape>
    </item>

    <!-- Glass highlight (top edge) -->
    <item
        android:left="1dp"
        android:top="1dp"
        android:right="1dp"
        android:bottom="15dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:startColor="#15FFFFFF"
                android:endColor="#00FFFFFF"
                android:type="linear" />
            <corners
                android:topLeftRadius="9dp"
                android:topRightRadius="9dp" />
        </shape>
    </item>

    <!-- Subtle border for glass effect -->
    <item>
        <shape android:shape="rectangle">
            <stroke
                android:width="0.5dp"
                android:color="#25FFFFFF" />
            <corners android:radius="9dp" />
        </shape>
    </item>

</layer-list>
