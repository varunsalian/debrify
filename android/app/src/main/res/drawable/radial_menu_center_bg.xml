<?xml version="1.0" encoding="utf-8"?>
<!-- Center circle with gradient and glow -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer glow ring -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#40dc143c" />
            <size android:width="140dp" android:height="140dp" />
        </shape>
    </item>

    <!-- Inner glow ring -->
    <item android:top="8dp" android:bottom="8dp" android:left="8dp" android:right="8dp">
        <shape android:shape="oval">
            <solid android:color="#60dc143c" />
        </shape>
    </item>

    <!-- Main center circle with gradient -->
    <item android:top="12dp" android:bottom="12dp" android:left="12dp" android:right="12dp">
        <shape android:shape="oval">
            <gradient
                android:angle="270"
                android:startColor="#2a2a2a"
                android:centerColor="#1a1a1a"
                android:endColor="#0a0a0a"
                android:type="radial"
                android:gradientRadius="60" />
            <stroke
                android:width="3dp"
                android:color="#FFDC143C" />
        </shape>
    </item>
</layer-list>
