<?xml version="1.0" encoding="utf-8"?>
<!-- Cinema Mode: Progress Thumb/Scrubber
     Elegant glowing orb that appears on hover/focus -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Outer glow -->
    <item android:bottom="-4dp" android:left="-4dp" android:right="-4dp" android:top="-4dp">
        <shape android:shape="oval">
            <solid android:color="#4DFF2D55" />
            <size android:width="24dp" android:height="24dp" />
        </shape>
    </item>

    <!-- White orb -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#FFFFFFFF" />
            <size android:width="16dp" android:height="16dp" />
        </shape>
    </item>

    <!-- Inner shadow for depth -->
    <item android:top="1dp" android:left="1dp">
        <shape android:shape="oval">
            <gradient
                android:type="radial"
                android:gradientRadius="8dp"
                android:startColor="#00000000"
                android:endColor="#1A000000" />
            <size android:width="14dp" android:height="14dp" />
        </shape>
    </item>

</layer-list>
