<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <androidx.media3.ui.PlayerView
        android:id="@+id/player_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:keepScreenOn="true"
        app:use_controller="true"
        app:resize_mode="fit"
        app:controller_layout_id="@layout/view_debrify_tv_controls"
        app:show_timeout="5000"
        app:surface_type="surface_view"
        android:elevation="0dp" />

    <!-- Custom SubtitleView - Must be ABOVE video but BELOW controls -->
    <androidx.media3.ui.SubtitleView
        android:id="@+id/player_subtitles_custom"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom|center_horizontal"
        android:paddingLeft="48dp"
        android:paddingRight="48dp"
        android:paddingBottom="24dp"
        android:elevation="10dp" />

    <LinearLayout
        android:id="@+id/player_header_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="20dp"
        android:paddingBottom="12dp">

        <TextView
            android:id="@+id/player_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="2"
            android:textColor="#CCFFFFFF"
            android:textSize="14sp"
            android:fontFamily="sans-serif-medium"
            android:textAlignment="center"
            android:visibility="gone" />

        <TextView
            android:id="@+id/player_hint"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone" />
    </LinearLayout>

    <!-- Broadcast-Style Lower-Third Bar (News/Sports Chyron) -->
    <LinearLayout
        android:id="@+id/player_broadcast_lower_third"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_marginTop="24dp"
        android:orientation="horizontal"
        android:background="@drawable/broadcast_lower_third_bg"
        android:elevation="16dp"
        android:visibility="gone">

        <!-- Left accent stripe (RED like "LIVE" indicator) -->
        <View
            android:id="@+id/player_broadcast_accent_stripe"
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:background="@drawable/broadcast_accent_stripe" />

        <!-- Channel info section -->
        <LinearLayout
            android:id="@+id/player_broadcast_channel_section"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:background="@drawable/broadcast_channel_box">

            <!-- Channel label -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CH"
                android:textColor="#999999"
                android:textSize="11sp"
                android:fontFamily="sans-serif-medium"
                android:letterSpacing="0.1"
                android:includeFontPadding="false"
                android:layout_marginEnd="4dp" />

            <!-- Channel number -->
            <TextView
                android:id="@+id/player_channel_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="05"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:fontFamily="sans-serif-black"
                android:letterSpacing="0.05"
                android:includeFontPadding="false" />

        </LinearLayout>

        <!-- Vertical divider -->
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#33FFFFFF" />

        <!-- Content info section -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">

            <!-- Channel name (small, uppercase) -->
            <TextView
                android:id="@+id/player_channel_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HBO MAX"
                android:textColor="#CCCCCC"
                android:textSize="10sp"
                android:fontFamily="sans-serif-medium"
                android:letterSpacing="0.15"
                android:maxLines="1"
                android:ellipsize="end"
                android:includeFontPadding="false" />

            <!-- Now playing title (larger, scrollable) -->
            <TextView
                android:id="@+id/player_title_badge_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Stranger Things S01E01"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:fontFamily="sans-serif-medium"
                android:letterSpacing="0.01"
                android:maxLines="1"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                android:scrollHorizontally="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:includeFontPadding="false" />

        </LinearLayout>

    </LinearLayout>

    <!-- YouTube-style Top Loading Bar -->
    <FrameLayout
        android:id="@+id/player_loading_bar_container"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_gravity="top"
        android:visibility="gone"
        android:background="#15000000">

        <View
            android:id="@+id/player_loading_bar"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="#CC00FF00"
            android:shadowColor="#AA00FF00"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="4" />
    </FrameLayout>

    <!-- Bottom-right Loading Indicator (independent of badge) -->
    <LinearLayout
        android:id="@+id/player_loading_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="60dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/player_loading_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LOADING"
            android:textColor="#00FF00"
            android:textSize="11sp"
            android:fontFamily="monospace"
            android:letterSpacing="0.1"
            android:shadowColor="#AA000000"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="3"
            android:layout_marginEnd="8dp"
            android:alpha="0.9" />

        <LinearLayout
            android:id="@+id/player_loading_dots"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <View
                android:id="@+id/loading_dot_1"
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:layout_marginEnd="4dp"
                android:background="@drawable/loading_dot" />

            <View
                android:id="@+id/loading_dot_2"
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:layout_marginEnd="4dp"
                android:background="@drawable/loading_dot" />

            <View
                android:id="@+id/loading_dot_3"
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:background="@drawable/loading_dot" />
        </LinearLayout>
    </LinearLayout>

    <!-- Retro TV Static Effect Overlay -->
    <FrameLayout
        android:id="@+id/player_next_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000"
        android:visibility="gone"
        android:elevation="40dp">

        <!-- Animated TV static background -->
        <View
            android:id="@+id/tv_static_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#000000" />

        <!-- Scan lines overlay -->
        <View
            android:id="@+id/tv_scanlines"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/tv_scanlines_pattern"
            android:alpha="0.3" />

        <!-- Center message with retro TV styling -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="48dp">

            <!-- Retro TV "No Signal" style text -->
            <TextView
                android:id="@+id/player_next_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“º TUNING..."
                android:textColor="#00FF00"
                android:textSize="36sp"
                android:fontFamily="monospace"
                android:textStyle="bold"
                android:shadowColor="#003300"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="4"
                android:letterSpacing="0.1" />

            <!-- Next video title -->
            <TextView
                android:id="@+id/player_next_subtext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:textColor="#00FF00"
                android:textSize="16sp"
                android:fontFamily="monospace"
                android:gravity="center"
                android:maxWidth="700dp"
                android:maxLines="2"
                android:ellipsize="end"
                android:shadowColor="#003300"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"
                android:visibility="gone" />

        </LinearLayout>

        <!-- Vignette effect (darker edges) -->
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/tv_vignette" />

    </FrameLayout>

    <!-- Channel Surf Animation Overlay -->
    <FrameLayout
        android:id="@+id/player_channel_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000"
        android:visibility="gone"
        android:elevation="40dp">

        <!-- Animated slide/wipe effect background -->
        <View
            android:id="@+id/channel_slide_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#001133" />

        <!-- RGB chromatic aberration bars -->
        <View
            android:id="@+id/channel_rgb_bars"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.2" />

        <!-- Center channel info with retro TV styling -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="48dp">

            <!-- Channel number in retro style -->
            <TextView
                android:id="@+id/channel_number_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CH 01"
                android:textColor="#00FFFF"
                android:textSize="72sp"
                android:fontFamily="monospace"
                android:textStyle="bold"
                android:shadowColor="#003333"
                android:shadowDx="4"
                android:shadowDy="4"
                android:shadowRadius="8"
                android:letterSpacing="0.2" />

            <!-- Channel name -->
            <TextView
                android:id="@+id/channel_name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:textColor="#00FFFF"
                android:textSize="24sp"
                android:fontFamily="monospace"
                android:gravity="center"
                android:maxWidth="800dp"
                android:maxLines="2"
                android:ellipsize="end"
                android:shadowColor="#003333"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="4" />

            <!-- "SWITCHING..." indicator -->
            <TextView
                android:id="@+id/channel_status_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="âš¡ SWITCHING CHANNEL âš¡"
                android:textColor="#FFFF00"
                android:textSize="18sp"
                android:fontFamily="monospace"
                android:textStyle="bold"
                android:shadowColor="#333300"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="4" />

        </LinearLayout>

        <!-- Vignette effect -->
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/tv_vignette" />

    </FrameLayout>

    <!-- Neon Search Overlay -->
    <FrameLayout
        android:id="@+id/player_search_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:elevation="200dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#AA000000" />

        <LinearLayout
            android:id="@+id/player_search_panel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:orientation="vertical"
            android:paddingStart="28dp"
            android:paddingEnd="28dp"
            android:paddingTop="36dp"
            android:paddingBottom="32dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/tv_search_panel_bg"
                android:orientation="vertical"
                android:padding="28dp">

                <TextView
                    android:id="@+id/player_search_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CHANNEL SCANNER"
                    android:textColor="#00FF00"
                    android:textSize="18sp"
                    android:fontFamily="monospace"
                    android:letterSpacing="0.12"
                    android:shadowColor="#66003300"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:shadowRadius="8" />

                <TextView
                    android:id="@+id/player_search_subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="Hold â–² to surface any channel in seconds"
                    android:textColor="#8800FF00"
                    android:textSize="13sp"
                    android:fontFamily="monospace"
                    android:letterSpacing="0.05" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/tv_search_input_bg"
                    android:orientation="horizontal"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="12dp"
                        android:src="@android:drawable/ic_menu_search"
                        android:tint="#8800FF00" />

                    <EditText
                        android:id="@+id/player_search_input"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:hint="Search by channel name or number"
                        android:textColorHint="#6600FF00"
                        android:textColor="#00FF00"
                        android:textSize="16sp"
                        android:fontFamily="monospace"
                        android:imeOptions="actionSearch"
                        android:singleLine="true"
                        android:padding="6dp"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:textCursorDrawable="@null" />

                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/player_search_results"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="8dp"
                    android:clipToPadding="false"
                    android:paddingBottom="12dp"
                    android:overScrollMode="never" />
            </LinearLayout>
        </LinearLayout>

    </FrameLayout>

    <!-- Channel Jump Overlay -->
    <include layout="@layout/view_channel_jump_overlay" />

    <!-- Custom Seekbar Overlay -->
    <include layout="@layout/view_custom_seekbar" />

    <!-- Seek Feedback Overlay -->
    <include layout="@layout/view_seek_feedback" />

</FrameLayout>
