<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <androidx.media3.ui.PlayerView
        android:id="@+id/player_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:keepScreenOn="true"
        app:use_controller="true"
        app:resize_mode="fit"
        app:controller_layout_id="@layout/view_debrify_tv_controls"
        app:show_timeout="5000" />

    <LinearLayout
        android:id="@+id/player_header_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="20dp"
        android:paddingBottom="12dp">

        <TextView
            android:id="@+id/player_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="2"
            android:textColor="#CCFFFFFF"
            android:textSize="14sp"
            android:fontFamily="sans-serif-medium"
            android:textAlignment="center"
            android:visibility="gone" />

        <TextView
            android:id="@+id/player_hint"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone" />
    </LinearLayout>

    <TextView
        android:id="@+id/player_watermark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="24dp"
        android:text="DebrifyTV"
        android:textColor="#80FFFFFF"
        android:textSize="14sp"
        android:textStyle="bold" />

    <androidx.media3.ui.SubtitleView
        android:id="@+id/player_subtitles"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:layout_marginBottom="36dp"
        android:paddingLeft="32dp"
        android:paddingRight="32dp" />

    <!-- Retro TV Static Effect Overlay -->
    <FrameLayout
        android:id="@+id/player_next_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000"
        android:visibility="gone">

        <!-- Animated TV static background -->
        <View
            android:id="@+id/tv_static_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#000000" />

        <!-- Scan lines overlay -->
        <View
            android:id="@+id/tv_scanlines"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/tv_scanlines_pattern"
            android:alpha="0.3" />

        <!-- Center message with retro TV styling -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="48dp">

            <!-- Retro TV "No Signal" style text -->
            <TextView
                android:id="@+id/player_next_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“º TUNING..."
                android:textColor="#00FF00"
                android:textSize="36sp"
                android:fontFamily="monospace"
                android:textStyle="bold"
                android:shadowColor="#003300"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="4"
                android:letterSpacing="0.1" />

            <!-- Next video title -->
            <TextView
                android:id="@+id/player_next_subtext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:textColor="#00FF00"
                android:textSize="16sp"
                android:fontFamily="monospace"
                android:gravity="center"
                android:maxWidth="700dp"
                android:maxLines="2"
                android:ellipsize="end"
                android:shadowColor="#003300"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"
                android:visibility="gone" />

        </LinearLayout>

        <!-- Vignette effect (darker edges) -->
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/tv_vignette" />

    </FrameLayout>

</FrameLayout>
