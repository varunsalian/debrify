<?xml version="1.0" encoding="utf-8"?>
<!-- Custom Seekbar Overlay - Full Screen Gaming Style -->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/seekbar_overlay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#99000000"
    android:visibility="gone"
    android:clickable="true"
    android:focusable="true">

    <!-- Main Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:paddingLeft="80dp"
        android:paddingRight="80dp">

        <!-- Instruction Text -->
        <TextView
            android:id="@+id/seekbar_instruction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Use ◄ ► to scrub • Center to confirm • Back to cancel"
            android:textSize="16sp"
            android:textColor="#CCFFFFFF"
            android:layout_marginBottom="40dp" />

        <!-- Progress Bar Container -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp">

            <!-- Background Bar -->
            <View
                android:id="@+id/seekbar_background"
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:layout_centerVertical="true"
                android:background="@drawable/seekbar_background" />

            <!-- Progress Bar -->
            <View
                android:id="@+id/seekbar_progress"
                android:layout_width="0dp"
                android:layout_height="8dp"
                android:layout_centerVertical="true"
                android:background="@drawable/seekbar_progress" />

            <!-- Scrubber Handle -->
            <View
                android:id="@+id/seekbar_handle"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:background="@drawable/seekbar_handle" />
        </RelativeLayout>

        <!-- Time Display -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:id="@+id/seekbar_current_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00"
                android:textSize="32sp"
                android:textColor="#FFFFFF"
                android:fontFamily="monospace"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" / "
                android:textSize="24sp"
                android:textColor="#99FFFFFF"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp" />

            <TextView
                android:id="@+id/seekbar_total_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00"
                android:textSize="24sp"
                android:textColor="#99FFFFFF"
                android:fontFamily="monospace" />
        </LinearLayout>

    </LinearLayout>

</FrameLayout>
