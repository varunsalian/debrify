<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <!-- Main Video Player -->
    <androidx.media3.ui.PlayerView
        android:id="@+id/android_tv_player_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:keepScreenOn="true"
        app:use_controller="true"
        app:resize_mode="fit"
        app:controller_layout_id="@layout/view_torrent_tv_controls"
        app:show_timeout="5000"
        app:surface_type="surface_view"
        android:elevation="0dp" />

    <!-- Custom SubtitleView - Must be ABOVE video but BELOW controls -->
    <androidx.media3.ui.SubtitleView
        android:id="@+id/android_tv_subtitles_custom"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom|center_horizontal"
        android:paddingLeft="48dp"
        android:paddingRight="48dp"
        android:paddingBottom="24dp"
        android:elevation="10dp" />

    <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
         CINEMA MODE - Subtle Title Overlay
         â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
    <FrameLayout
        android:id="@+id/android_tv_title_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:visibility="gone"
        android:elevation="20dp">

        <!-- Subtle gradient scrim -->
        <View
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:background="@drawable/cinema_title_scrim" />

        <!-- â•â•â• SIMPLE MODE: Centered title â•â•â• -->
        <TextView
            android:id="@+id/android_tv_player_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="48dp"
            android:paddingEnd="48dp"
            android:paddingTop="20dp"
            android:paddingBottom="12dp"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="2"
            android:textColor="#CCFFFFFF"
            android:textSize="15sp"
            android:fontFamily="sans-serif-medium"
            android:letterSpacing="0.02"
            android:lineSpacingMultiplier="1.2"
            android:shadowColor="#66000000"
            android:shadowDx="0"
            android:shadowDy="1"
            android:shadowRadius="3" />

        <!-- â•â•â• OTT MODE: Compact metadata layout â•â•â• -->
        <LinearLayout
            android:id="@+id/android_tv_title_ott"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingStart="48dp"
            android:paddingEnd="48dp"
            android:paddingTop="16dp"
            android:paddingBottom="12dp"
            android:visibility="gone">

            <!-- Left: Badge + Episode Title -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <!-- Episode Badge -->
                <TextView
                    android:id="@+id/android_tv_ott_episode_badge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ott_episode_badge"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:textColor="#FFFFFF"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium" />

                <!-- Episode Title (can wrap to 2 lines) -->
                <TextView
                    android:id="@+id/android_tv_ott_episode_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:textColor="#CCFFFFFF"
                    android:textSize="15sp"
                    android:fontFamily="sans-serif-medium"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:lineSpacingMultiplier="1.2"
                    android:shadowColor="#66000000"
                    android:shadowDx="0"
                    android:shadowDy="1"
                    android:shadowRadius="3" />

            </LinearLayout>

            <!-- Right: IMDB Rating -->
            <LinearLayout
                android:id="@+id/android_tv_ott_rating_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginStart="24dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â˜…"
                    android:textColor="#F5C518"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/android_tv_ott_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif-medium" />

            </LinearLayout>

        </LinearLayout>

        <!-- Hidden: Series name (kept for binding but not shown) -->
        <TextView
            android:id="@+id/android_tv_ott_series_name"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone" />

    </FrameLayout>

    <!-- Channel Badge (bottom right) -->
    <TextView
        android:id="@+id/android_tv_channel_badge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="20dp"
        android:text="TORRENT MODE"
        android:textColor="#99FFFFFF"
        android:textSize="13sp"
        android:fontFamily="monospace"
        android:shadowColor="#AA000000"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="4"
        android:maxLines="1"
        android:ellipsize="end"
        android:letterSpacing="0.05"
        android:alpha="0.85"
        android:visibility="gone"
        android:elevation="20dp" />

    <!-- Playlist Browser Overlay (horizontal at bottom) -->
    <FrameLayout
        android:id="@+id/android_tv_playlist_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:elevation="200dp">

        <!-- Dark gradient background -->
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/playlist_overlay_gradient" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:paddingStart="48dp"
            android:paddingEnd="48dp"
            android:paddingTop="24dp"
            android:paddingBottom="24dp">

            <!-- Season Tabs -->
            <include
                android:id="@+id/season_tabs"
                layout="@layout/view_season_tabs" />

            <!-- Horizontal Episode List -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/android_tv_playlist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:clipToPadding="false"
                android:clipChildren="false"
                android:focusable="true"
                android:focusableInTouchMode="true" />
        </LinearLayout>
    </FrameLayout>

    <!-- Loading/Tuning Stream Overlay -->
    <FrameLayout
        android:id="@+id/android_tv_next_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000"
        android:visibility="gone"
        android:elevation="40dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="48dp">

            <TextView
                android:id="@+id/android_tv_next_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“º LOADING..."
                android:textColor="#00FF99"
                android:textSize="36sp"
                android:fontFamily="monospace"
                android:textStyle="bold"
                android:shadowColor="#003300"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="4"
                android:letterSpacing="0.1" />

            <TextView
                android:id="@+id/android_tv_next_subtext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:textColor="#00FF99"
                android:textSize="16sp"
                android:fontFamily="monospace"
                android:gravity="center"
                android:maxWidth="700dp"
                android:maxLines="2"
                android:ellipsize="end"
                android:shadowColor="#003300"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"
                android:visibility="gone" />
        </LinearLayout>
    </FrameLayout>

    <!-- Custom Seekbar Overlay -->
    <include layout="@layout/view_custom_seekbar" />

    <!-- Seek Feedback Overlay -->
    <include layout="@layout/view_seek_feedback" />

    <!-- Subtitle Settings Panel -->
    <include layout="@layout/view_subtitle_settings_panel" />

</FrameLayout>
