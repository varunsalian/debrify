<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <!-- Main Video Player -->
    <androidx.media3.ui.PlayerView
        android:id="@+id/android_tv_player_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:keepScreenOn="true"
        app:use_controller="true"
        app:resize_mode="fit"
        app:controller_layout_id="@layout/view_torrent_tv_controls"
        app:show_timeout="5000"
        app:surface_type="surface_view"
        android:elevation="0dp" />

    <!-- Custom SubtitleView - Must be ABOVE video but BELOW controls -->
    <androidx.media3.ui.SubtitleView
        android:id="@+id/android_tv_subtitles_custom"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom|center_horizontal"
        android:paddingLeft="48dp"
        android:paddingRight="48dp"
        android:paddingBottom="24dp"
        android:elevation="10dp" />

    <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
         CINEMA MODE - Premium Title Overlay
         Cinematic title presentation with elegant typography
         â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
    <FrameLayout
        android:id="@+id/android_tv_title_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:visibility="gone"
        android:elevation="20dp">

        <!-- Cinematic gradient scrim -->
        <View
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="@drawable/cinema_title_scrim" />

        <!-- Title content -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingStart="48dp"
            android:paddingEnd="48dp"
            android:paddingTop="28dp"
            android:paddingBottom="16dp">

            <!-- Main Title - Elegant serif-like presentation -->
            <TextView
                android:id="@+id/android_tv_player_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="2"
                android:textColor="@color/cinema_text_title"
                android:textSize="18sp"
                android:fontFamily="sans-serif-light"
                android:letterSpacing="0.04"
                android:lineSpacingMultiplier="1.2"
                android:textAlignment="center"
                android:shadowColor="#99000000"
                android:shadowDx="0"
                android:shadowDy="2"
                android:shadowRadius="4" />

        </LinearLayout>

    </FrameLayout>

    <!-- Channel Badge (bottom right) -->
    <TextView
        android:id="@+id/android_tv_channel_badge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="20dp"
        android:text="TORRENT MODE"
        android:textColor="#99FFFFFF"
        android:textSize="13sp"
        android:fontFamily="monospace"
        android:shadowColor="#AA000000"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="4"
        android:maxLines="1"
        android:ellipsize="end"
        android:letterSpacing="0.05"
        android:alpha="0.85"
        android:visibility="gone"
        android:elevation="20dp" />

    <!-- Playlist Browser Overlay (horizontal at bottom) -->
    <FrameLayout
        android:id="@+id/android_tv_playlist_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:elevation="200dp">

        <!-- Dark gradient background -->
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/playlist_overlay_gradient" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:paddingStart="48dp"
            android:paddingEnd="48dp"
            android:paddingTop="24dp"
            android:paddingBottom="24dp">

            <!-- Season Tabs -->
            <include
                android:id="@+id/season_tabs"
                layout="@layout/view_season_tabs" />

            <!-- Horizontal Episode List -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/android_tv_playlist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:clipToPadding="false"
                android:clipChildren="false"
                android:focusable="true"
                android:focusableInTouchMode="true" />
        </LinearLayout>
    </FrameLayout>

    <!-- Loading/Tuning Stream Overlay -->
    <FrameLayout
        android:id="@+id/android_tv_next_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000"
        android:visibility="gone"
        android:elevation="40dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="48dp">

            <TextView
                android:id="@+id/android_tv_next_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“º LOADING..."
                android:textColor="#00FF99"
                android:textSize="36sp"
                android:fontFamily="monospace"
                android:textStyle="bold"
                android:shadowColor="#003300"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="4"
                android:letterSpacing="0.1" />

            <TextView
                android:id="@+id/android_tv_next_subtext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:textColor="#00FF99"
                android:textSize="16sp"
                android:fontFamily="monospace"
                android:gravity="center"
                android:maxWidth="700dp"
                android:maxLines="2"
                android:ellipsize="end"
                android:shadowColor="#003300"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"
                android:visibility="gone" />
        </LinearLayout>
    </FrameLayout>

    <!-- Custom Seekbar Overlay -->
    <include layout="@layout/view_custom_seekbar" />

    <!-- Seek Feedback Overlay -->
    <include layout="@layout/view_seek_feedback" />

</FrameLayout>
