<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <androidx.media3.ui.PlayerView
        android:id="@+id/android_tv_player_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:keepScreenOn="true"
        app:use_controller="false" />

    <View
        android:id="@+id/android_tv_dim_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#99000000"
        android:visibility="gone" />

    <View
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_gravity="top"
        android:background="@drawable/tv_header_gradient" />

    <LinearLayout
        android:id="@+id/android_tv_header_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:orientation="vertical"
        android:paddingStart="48dp"
        android:paddingEnd="48dp"
        android:paddingTop="48dp"
        android:paddingBottom="24dp">

        <TextView
            android:id="@+id/android_tv_channel_badge"
            style="@style/TvBadge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TORRENT MODE" />

        <TextView
            android:id="@+id/android_tv_player_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFFFF"
            android:textSize="30sp"
            android:textStyle="bold"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginTop="12dp" />

        <TextView
            android:id="@+id/android_tv_player_subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#CCFFFFFF"
            android:textSize="16sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginTop="6dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp">

            <TextView
                android:id="@+id/android_tv_episode_badge"
                style="@style/TvBadge"
                android:text="S01 · E01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/android_tv_file_badge"
                style="@style/TvBadge"
                android:layout_marginStart="8dp"
                android:text="FILES"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/android_tv_duration_badge"
                style="@style/TvBadge"
                android:layout_marginStart="8dp"
                android:text="0/0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">

            <TextView
                android:id="@+id/android_tv_chip_play"
                style="@style/TvChip"
                android:text="▶ Play"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/android_tv_chip_playlist"
                style="@style/TvChip"
                android:layout_marginStart="12dp"
                android:text="☰ Playlist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/android_tv_chip_info"
                style="@style/TvChip"
                android:layout_marginStart="12dp"
                android:text="ⓘ Details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/android_tv_bottom_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:padding="40dp"
        android:background="@drawable/tv_bottom_gradient">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NOW PLAYING"
            android:textColor="#80FFFFFF"
            android:textSize="12sp"
            android:letterSpacing="0.3" />

        <TextView
            android:id="@+id/android_tv_bottom_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFFFF"
            android:textSize="22sp"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginTop="6dp" />

        <TextView
            android:id="@+id/android_tv_bottom_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#CCFFFFFF"
            android:textSize="15sp"
            android:maxLines="3"
            android:ellipsize="end"
            android:layout_marginTop="4dp" />

        <ProgressBar
            android:id="@+id/android_tv_progress"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_marginTop="16dp"
            android:progressDrawable="@drawable/tv_progress_drawable" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/android_tv_progress_position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#CCFFFFFF"
                android:textSize="12sp"
                android:text="00:00" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp" />

            <TextView
                android:id="@+id/android_tv_progress_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#80FFFFFF"
                android:textSize="12sp"
                android:text="00:00" />
        </LinearLayout>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/android_tv_playlist"
        android:layout_width="420dp"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:padding="32dp"
        android:visibility="gone"
        android:background="@drawable/tv_playlist_scrim"
        android:focusable="true"
        android:focusableInTouchMode="true" />

    <FrameLayout
        android:id="@+id/android_tv_static_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#33000000" />

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/tv_scanlines_pattern"
            android:alpha="0.25" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="48dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TUNING STREAM"
                android:textColor="#00FF99"
                android:textSize="32sp"
                android:fontFamily="monospace"
                android:textStyle="bold"
                android:shadowColor="#330000"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="8" />
        </LinearLayout>
    </FrameLayout>

</FrameLayout>
