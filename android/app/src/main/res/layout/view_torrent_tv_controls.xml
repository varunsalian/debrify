<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/debrify_controls_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:clipToPadding="false"
    android:visibility="gone">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:background="@drawable/debrify_tv_controls_scrim"
        android:paddingStart="32dp"
        android:paddingEnd="32dp"
        android:paddingTop="12dp"
        android:paddingBottom="8dp"
        android:clipToPadding="false"
        android:elevation="100dp"
        android:translationZ="10dp">

        <LinearLayout
            android:id="@+id/debrify_controls_buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:clipToPadding="false"
            android:paddingBottom="0dp">

            <!-- Time Display -->
            <TextView
                android:id="@+id/debrify_time_display"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/netflix_text_primary"
                android:textSize="10sp"
                android:fontFamily="sans-serif-light"
                android:letterSpacing="0.02"
                android:gravity="center"
                android:paddingStart="0dp"
                android:paddingEnd="8dp"
                android:minWidth="80dp"
                android:text="00:00 / 00:00" />

            <!-- Left side controls -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/debrify_audio_button"
                style="@style/DebrifyTvChipButton"
                android:drawableStart="@drawable/ic_audio"
                android:text="Audio" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/debrify_subtitle_button"
                style="@style/DebrifyTvChipButton"
                android:drawableStart="@drawable/ic_subtitles"
                android:text="Subtitles" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/debrify_aspect_button"
                style="@style/DebrifyTvChipButton"
                android:drawableStart="@drawable/ic_aspect"
                android:text="Aspect" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/debrify_playlist_button"
                style="@style/DebrifyTvChipButton"
                android:drawableStart="@drawable/ic_guide"
                android:text="Playlist" />

            <!-- Center: Pause/Play -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/debrify_pause_button"
                style="@style/DebrifyTvChipButton"
                android:drawableStart="@drawable/ic_pause"
                android:text="Pause" />

            <!-- Right side controls -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/debrify_next_button"
                style="@style/DebrifyTvChipButton"
                android:drawableStart="@drawable/ic_next_stream"
                android:text="Next Episode" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/debrify_random_button"
                style="@style/DebrifyTvChipButton"
                android:drawableStart="@drawable/ic_random"
                android:text="Random" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/debrify_speed_button"
                style="@style/DebrifyTvChipButton"
                android:drawableStart="@drawable/ic_speed"
                android:text="Speed" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/debrify_night_mode_button"
                style="@style/DebrifyTvChipButton"
                android:drawableStart="@drawable/ic_night_mode"
                android:text="Off"
                android:layout_marginEnd="0dp" />

        </LinearLayout>

    </LinearLayout>

    <!-- Thin red progress line at the bottom of the menu -->
    <View
        android:id="@+id/debrify_progress_line"
        android:layout_width="0dp"
        android:layout_height="3dp"
        android:layout_gravity="bottom"
        android:background="#E50914"
        android:elevation="101dp"
        android:translationZ="11dp" />

</FrameLayout>
