<?xml version="1.0" encoding="utf-8"?>
<!-- ═══════════════════════════════════════════════════════════════════════════════
     CINEMA MODE - Premium Video Player Controls
     A theatrical experience for your living room
     ═══════════════════════════════════════════════════════════════════════════════ -->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/debrify_controls_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:clipToPadding="false"
    android:clipChildren="false"
    android:visibility="gone">

    <!-- Gradient scrim - minimal -->
    <View
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_gravity="bottom"
        android:background="@drawable/cinema_controls_scrim" />

    <!-- Main Controls Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:paddingStart="48dp"
        android:paddingEnd="48dp"
        android:paddingBottom="8dp"
        android:clipToPadding="false"
        android:clipChildren="false">

        <!-- ═══════════════════════════════════════════════════════════
             INTERACTIVE PROGRESS BAR - Focusable scrubber with seeking
             ═══════════════════════════════════════════════════════════ -->
        <FrameLayout
            android:id="@+id/cinema_progress_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:nextFocusDown="@+id/debrify_pause_button"
            android:clipChildren="false"
            android:clipToPadding="false">

            <!-- Progress Track Container -->
            <FrameLayout
                android:id="@+id/cinema_progress_track_container"
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:layout_marginTop="8dp"
                android:layout_marginStart="72dp"
                android:layout_marginEnd="72dp"
                android:clipChildren="false">

                <!-- Background track -->
                <View
                    android:id="@+id/cinema_progress_background"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/cinema_progress_bg" />

                <!-- Played progress (red) -->
                <View
                    android:id="@+id/debrify_progress_line"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/cinema_progress_played" />

                <!-- Thumb/Handle - appears on focus -->
                <View
                    android:id="@+id/cinema_progress_thumb"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/cinema_progress_thumb"
                    android:elevation="4dp"
                    android:visibility="invisible" />

            </FrameLayout>

            <!-- Current Time (Left) - becomes editable during seek -->
            <TextView
                android:id="@+id/debrify_time_current"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center_vertical"
                android:textColor="@color/cinema_text_primary"
                android:textSize="13sp"
                android:fontFamily="sans-serif-medium"
                android:letterSpacing="0.03"
                tools:text="14:19" />

            <!-- Total Time (Right) -->
            <TextView
                android:id="@+id/debrify_time_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center_vertical"
                android:textColor="@color/cinema_text_secondary"
                android:textSize="13sp"
                android:fontFamily="sans-serif"
                android:letterSpacing="0.03"
                tools:text="21:40" />

            <!-- Speed Indicator (appears during fast seeking) -->
            <TextView
                android:id="@+id/cinema_speed_indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="24dp"
                android:textColor="#00FF99"
                android:textSize="12sp"
                android:fontFamily="monospace"
                android:textStyle="bold"
                android:visibility="gone"
                tools:text="→ 2.0x" />

        </FrameLayout>

        <!-- ═══════════════════════════════════════════════════════════
             FLOATING DOCK - Premium glass control bar
             ═══════════════════════════════════════════════════════════ -->
        <LinearLayout
            android:id="@+id/debrify_controls_buttons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/cinema_dock_bg"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:clipToPadding="false"
            android:clipChildren="false"
            android:elevation="16dp"
            android:translationZ="8dp">

            <!-- ══ LEFT GROUP ══ -->

            <!-- Audio -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/debrify_audio_button"
                style="@style/CinemaControlButton"
                android:drawableStart="@drawable/ic_audio"
                android:text="Audio" />

            <!-- Subtitles -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/debrify_subtitle_button"
                style="@style/CinemaControlButton"
                android:drawableStart="@drawable/ic_subtitles"
                android:text="Subs" />

            <!-- Aspect -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/debrify_aspect_button"
                style="@style/CinemaControlButton"
                android:drawableStart="@drawable/ic_aspect"
                android:text="Fill" />

            <!-- Playlist -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/debrify_playlist_button"
                style="@style/CinemaControlButton"
                android:drawableStart="@drawable/ic_guide"
                android:text="List" />

            <!-- ══ DIVIDER ══ -->
            <View
                android:layout_width="1dp"
                android:layout_height="18dp"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="6dp"
                android:background="#26FFFFFF" />

            <!-- ══ CENTER: PLAY/PAUSE (Hero Button) ══ -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/debrify_pause_button"
                style="@style/CinemaPlayButton"
                android:drawableStart="@drawable/ic_play"
                android:text="Play" />

            <!-- ══ DIVIDER ══ -->
            <View
                android:layout_width="1dp"
                android:layout_height="18dp"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="6dp"
                android:background="#26FFFFFF" />

            <!-- ══ RIGHT GROUP ══ -->

            <!-- Next Episode -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/debrify_next_button"
                style="@style/CinemaControlButton"
                android:drawableStart="@drawable/ic_next_stream"
                android:text="Next" />

            <!-- Random -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/debrify_random_button"
                style="@style/CinemaControlButton"
                android:drawableStart="@drawable/ic_random"
                android:text="Shuffle" />

            <!-- Speed -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/debrify_speed_button"
                style="@style/CinemaControlButton"
                android:drawableStart="@drawable/ic_speed"
                android:text="1x" />

            <!-- Night Mode -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/debrify_night_mode_button"
                style="@style/CinemaControlButton"
                android:drawableStart="@drawable/ic_night_mode"
                android:text="Night"
                android:layout_marginEnd="0dp" />

        </LinearLayout>

    </LinearLayout>

    <!-- Hidden legacy time display for compatibility -->
    <TextView
        android:id="@+id/debrify_time_display"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        tools:text="00:00 / 00:00" />

</FrameLayout>
