<?xml version="1.0" encoding="utf-8"?>
<!-- ═══════════════════════════════════════════════════════════════════════════════
     SUBTITLE SETTINGS PANEL - Quick In-Player Customization
     Single row layout: Track, Size, Style, Color, Background, Reset
     ═══════════════════════════════════════════════════════════════════════════════ -->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/subtitle_settings_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="gone"
    android:elevation="300dp">

    <!-- Semi-transparent backdrop -->
    <View
        android:id="@+id/subtitle_settings_backdrop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#99000000" />

    <!-- Main Panel Card -->
    <LinearLayout
        android:id="@+id/subtitle_settings_panel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:background="@drawable/subtitle_panel_bg"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:elevation="16dp">

        <!-- Header -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="SUBTITLE SETTINGS"
            android:textColor="#FFFFFF"
            android:textSize="13sp"
            android:fontFamily="sans-serif-medium"
            android:letterSpacing="0.1"
            android:layout_marginBottom="14dp" />

        <!-- Single Row: All Options -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <!-- Column 1: Track Selection -->
            <LinearLayout
                android:id="@+id/subtitle_column_track"
                android:layout_width="88dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:background="@drawable/subtitle_column_bg"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:nextFocusRight="@+id/subtitle_column_size"
                android:layout_marginEnd="6dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TRACK"
                    android:textColor="#80FFFFFF"
                    android:textSize="9sp"
                    android:fontFamily="sans-serif-medium"
                    android:letterSpacing="0.05" />

                <TextView
                    android:id="@+id/subtitle_value_track"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="Off"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:fontFamily="sans-serif-medium"
                    android:maxLines="1"
                    android:ellipsize="middle"
                    android:maxWidth="76dp"
                    android:gravity="center" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="▼"
                    android:textColor="#60FFFFFF"
                    android:textSize="8sp" />

            </LinearLayout>

            <!-- Column 2: Size -->
            <LinearLayout
                android:id="@+id/subtitle_column_size"
                android:layout_width="72dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:background="@drawable/subtitle_column_bg"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:nextFocusLeft="@id/subtitle_column_track"
                android:nextFocusRight="@+id/subtitle_column_style"
                android:layout_marginEnd="6dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SIZE"
                    android:textColor="#80FFFFFF"
                    android:textSize="9sp"
                    android:fontFamily="sans-serif-medium"
                    android:letterSpacing="0.05" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="▲"
                    android:textColor="#60FFFFFF"
                    android:textSize="8sp" />

                <TextView
                    android:id="@+id/subtitle_value_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Medium"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="▼"
                    android:textColor="#60FFFFFF"
                    android:textSize="8sp" />

            </LinearLayout>

            <!-- Column 3: Style -->
            <LinearLayout
                android:id="@+id/subtitle_column_style"
                android:layout_width="72dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:background="@drawable/subtitle_column_bg"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:nextFocusLeft="@id/subtitle_column_size"
                android:nextFocusRight="@+id/subtitle_column_color"
                android:layout_marginEnd="6dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="STYLE"
                    android:textColor="#80FFFFFF"
                    android:textSize="9sp"
                    android:fontFamily="sans-serif-medium"
                    android:letterSpacing="0.05" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="▲"
                    android:textColor="#60FFFFFF"
                    android:textSize="8sp" />

                <TextView
                    android:id="@+id/subtitle_value_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Outline"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="▼"
                    android:textColor="#60FFFFFF"
                    android:textSize="8sp" />

            </LinearLayout>

            <!-- Column 4: Color -->
            <LinearLayout
                android:id="@+id/subtitle_column_color"
                android:layout_width="72dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:background="@drawable/subtitle_column_bg"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:nextFocusLeft="@id/subtitle_column_style"
                android:nextFocusRight="@+id/subtitle_column_bg"
                android:layout_marginEnd="6dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="COLOR"
                    android:textColor="#80FFFFFF"
                    android:textSize="9sp"
                    android:fontFamily="sans-serif-medium"
                    android:letterSpacing="0.05" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="▲"
                    android:textColor="#60FFFFFF"
                    android:textSize="8sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <View
                        android:id="@+id/subtitle_color_swatch"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:background="@drawable/subtitle_color_swatch"
                        android:backgroundTint="#FFFFFF" />

                    <TextView
                        android:id="@+id/subtitle_value_color"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:text="White"
                        android:textColor="#FFFFFF"
                        android:textSize="12sp"
                        android:fontFamily="sans-serif-medium" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="▼"
                    android:textColor="#60FFFFFF"
                    android:textSize="8sp" />

            </LinearLayout>

            <!-- Column 5: Background -->
            <LinearLayout
                android:id="@+id/subtitle_column_bg"
                android:layout_width="72dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:background="@drawable/subtitle_column_bg"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:nextFocusLeft="@id/subtitle_column_color"
                android:nextFocusRight="@+id/subtitle_reset_button"
                android:layout_marginEnd="6dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BG"
                    android:textColor="#80FFFFFF"
                    android:textSize="9sp"
                    android:fontFamily="sans-serif-medium"
                    android:letterSpacing="0.05" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="▲"
                    android:textColor="#60FFFFFF"
                    android:textSize="8sp" />

                <TextView
                    android:id="@+id/subtitle_value_bg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="None"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="▼"
                    android:textColor="#60FFFFFF"
                    android:textSize="8sp" />

            </LinearLayout>

            <!-- Column 6: Reset -->
            <LinearLayout
                android:id="@+id/subtitle_reset_button"
                android:layout_width="56dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:background="@drawable/subtitle_column_bg"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:nextFocusLeft="@id/subtitle_column_bg">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_reset"
                    android:tint="#FFFFFF" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Reset"
                    android:textColor="#FFFFFF"
                    android:textSize="10sp"
                    android:fontFamily="sans-serif-medium" />

            </LinearLayout>

        </LinearLayout>

        <!-- Preview Section -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/subtitle_preview_bg">

            <TextView
                android:id="@+id/subtitle_preview_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Sample subtitle preview"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:fontFamily="sans-serif"
                android:shadowColor="#000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2" />

        </FrameLayout>

        <!-- Hint -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="◄► Navigate  |  ▲▼ Change  |  OK Select  |  BACK Close"
            android:textColor="#50FFFFFF"
            android:textSize="10sp"
            android:fontFamily="sans-serif" />

    </LinearLayout>

</FrameLayout>
