<?xml version="1.0" encoding="utf-8"?>
<!-- IPTV Channel Guide Overlay -->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/iptv_guide_overlay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B3000000"
    android:visibility="gone">

    <!-- Center Panel -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="48dp"
        android:layout_marginEnd="48dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/iptv_guide_panel_bg"
        android:elevation="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:paddingTop="20dp"
                android:paddingBottom="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="IPTV CHANNELS"
                        android:textColor="#FFFFFFFF"
                        android:textSize="18sp"
                        android:fontFamily="sans-serif-medium"
                        android:letterSpacing="0.08" />

                    <TextView
                        android:id="@+id/iptv_guide_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:paddingTop="3dp"
                        android:paddingBottom="3dp"
                        android:textColor="#99FFFFFF"
                        android:textSize="12sp"
                        android:background="#1AFFFFFF"
                        tools:text="150" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1" />

                    <!-- Currently playing indicator -->
                    <TextView
                        android:id="@+id/iptv_guide_current_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxWidth="300dp"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:textColor="#FF00BCD4"
                        android:textSize="13sp"
                        android:fontFamily="sans-serif-medium"
                        tools:text="BBC One HD" />
                </LinearLayout>
            </LinearLayout>

            <!-- Category Tabs -->
            <HorizontalScrollView
                android:id="@+id/iptv_guide_category_scroll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:paddingBottom="8dp">

                <LinearLayout
                    android:id="@+id/iptv_guide_category_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" />
            </HorizontalScrollView>

            <!-- Search Bar -->
            <EditText
                android:id="@+id/iptv_guide_search"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginBottom="8dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:hint="Search channels..."
                android:textColor="#FFFFFFFF"
                android:textColorHint="#59FFFFFF"
                android:textSize="14sp"
                android:background="#0FFFFFFF"
                android:imeOptions="actionSearch"
                android:inputType="text"
                android:maxLines="1"
                android:drawableStart="@android:drawable/ic_menu_search"
                android:drawablePadding="8dp"
                android:drawableTint="#66FFFFFF" />

            <!-- Channel List -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/iptv_guide_list"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:paddingTop="4dp"
                android:clipToPadding="false"
                android:focusable="true"
                android:focusableInTouchMode="true" />

            <!-- Footer -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:paddingTop="10dp"
                android:paddingBottom="14dp"
                android:paddingStart="24dp"
                android:paddingEnd="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BACK to close  ·  Use arrows  ·  OK to tune"
                    android:textColor="#4DFFFFFF"
                    android:textSize="11sp"
                    android:fontFamily="sans-serif"
                    android:letterSpacing="0.04" />
            </LinearLayout>

        </LinearLayout>
    </FrameLayout>
</FrameLayout>
