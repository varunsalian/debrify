<?xml version="1.0" encoding="utf-8"?>
<!-- IPTV Channel list item (72dp height) -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:background="@drawable/iptv_channel_item_bg"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:clickable="true">

    <!-- Channel Logo -->
    <FrameLayout
        android:layout_width="48dp"
        android:layout_height="48dp">

        <ImageView
            android:id="@+id/iptv_channel_logo"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:scaleType="centerCrop"
            android:visibility="gone"
            tools:visibility="visible" />

        <!-- Letter avatar fallback -->
        <TextView
            android:id="@+id/iptv_channel_letter"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:gravity="center"
            android:textColor="#00BCD4"
            android:textSize="20sp"
            android:textStyle="bold"
            android:background="#1A00BCD4"
            tools:text="A" />
    </FrameLayout>

    <!-- Channel Info -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginStart="14dp">

        <TextView
            android:id="@+id/iptv_channel_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#F2FFFFFF"
            android:textSize="16sp"
            android:fontFamily="sans-serif-medium"
            android:maxLines="1"
            android:ellipsize="end"
            tools:text="BBC One HD" />

        <TextView
            android:id="@+id/iptv_channel_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:textColor="#59FFFFFF"
            android:textSize="12sp"
            android:textAllCaps="true"
            android:letterSpacing="0.04"
            android:maxLines="1"
            android:ellipsize="end"
            android:visibility="gone"
            tools:text="ENTERTAINMENT"
            tools:visibility="visible" />
    </LinearLayout>

    <!-- LIVE Badge -->
    <LinearLayout
        android:id="@+id/iptv_channel_live_badge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="6dp"
        android:paddingEnd="6dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:layout_marginStart="8dp"
        android:background="#33FF0000"
        android:visibility="gone"
        tools:visibility="visible">

        <View
            android:layout_width="6dp"
            android:layout_height="6dp"
            android:background="#FFFF0000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="LIVE"
            android:textColor="#FFFF0000"
            android:textSize="9sp"
            android:textStyle="bold"
            android:letterSpacing="0.05" />
    </LinearLayout>

    <!-- NOW Badge (current channel) -->
    <TextView
        android:id="@+id/iptv_channel_now_badge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:layout_marginStart="8dp"
        android:text="NOW"
        android:textColor="#FFFFFFFF"
        android:textSize="10sp"
        android:textStyle="bold"
        android:letterSpacing="0.05"
        android:background="#FF00BCD4"
        android:visibility="gone"
        tools:visibility="visible" />

</LinearLayout>
