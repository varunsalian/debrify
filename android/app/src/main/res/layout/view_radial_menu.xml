<?xml version="1.0" encoding="utf-8"?>
<!-- Refined radial menu with cross layout -->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/radial_menu_overlay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DD000000"
    android:clickable="true"
    android:focusable="true"
    android:visibility="gone">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/radial_menu_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/tv_glass_panel_bg"
        android:clipToPadding="false"
        android:elevation="18dp"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingTop="24dp"
        android:paddingBottom="24dp">

        <TextView
            android:id="@+id/radial_menu_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quick Controls"
            android:textColor="#FFFFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/radial_menu_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="Navigate channels, audio, and playback tools"
            android:textColor="#CCFFFFFF"
            android:textSize="13sp"
            android:fontFamily="sans-serif"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/radial_menu_title" />

        <View
            android:id="@+id/radial_menu_anchor"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/radial_menu_subtitle"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Cardinal actions: Channel navigation and core playback -->
        <LinearLayout
            android:id="@+id/radial_option_up"
            android:layout_width="172dp"
            android:layout_height="94dp"
            android:layout_margin="8dp"
            android:background="@drawable/tv_action_card_bg"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="14dp"
            android:stateListAnimator="@null"
            app:layout_constraintCircle="@id/radial_menu_anchor"
            app:layout_constraintCircleAngle="270"
            app:layout_constraintCircleRadius="160dp">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginBottom="8dp"
                android:src="@drawable/ic_next_channel"
                android:tint="@color/tv_button_selected" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Next Channel"
                android:textColor="@color/tv_button_selected"
                android:textSize="14sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/radial_option_down"
            android:layout_width="172dp"
            android:layout_height="94dp"
            android:layout_margin="8dp"
            android:background="@drawable/tv_action_card_bg"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="14dp"
            android:stateListAnimator="@null"
            app:layout_constraintCircle="@id/radial_menu_anchor"
            app:layout_constraintCircleAngle="90"
            app:layout_constraintCircleRadius="160dp">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginBottom="8dp"
                android:src="@drawable/ic_next_stream"
                android:tint="@color/tv_button_selected" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Next Stream"
                android:textColor="@color/tv_button_selected"
                android:textSize="14sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/radial_option_left"
            android:layout_width="160dp"
            android:layout_height="94dp"
            android:layout_margin="8dp"
            android:background="@drawable/tv_action_card_bg"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="14dp"
            android:stateListAnimator="@null"
            app:layout_constraintCircle="@id/radial_menu_anchor"
            app:layout_constraintCircleAngle="180"
            app:layout_constraintCircleRadius="160dp">

            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_marginBottom="8dp"
                android:src="@drawable/ic_audio"
                android:tint="#FFFFFFFF" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Audio"
                android:textColor="#FFFFFFFF"
                android:textSize="14sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/radial_option_right"
            android:layout_width="160dp"
            android:layout_height="94dp"
            android:layout_margin="8dp"
            android:background="@drawable/tv_action_card_bg"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="14dp"
            android:stateListAnimator="@null"
            app:layout_constraintCircle="@id/radial_menu_anchor"
            app:layout_constraintCircleAngle="0"
            app:layout_constraintCircleRadius="160dp">

            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_marginBottom="8dp"
                android:src="@drawable/ic_subtitles"
                android:tint="#FFFFFFFF" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Subtitles"
                android:textColor="#FFFFFFFF"
                android:textSize="14sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium" />
        </LinearLayout>

        <!-- Diagonal chips: utility tools -->
        <LinearLayout
            android:id="@+id/radial_option_up_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/tv_chip_bg"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center_vertical"
            android:minHeight="42dp"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            app:layout_constraintCircle="@id/radial_menu_anchor"
            app:layout_constraintCircleAngle="225"
            app:layout_constraintCircleRadius="130dp">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/ic_aspect"
                android:tint="#FFFFFFFF" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aspect"
                android:textColor="#FFFFFFFF"
                android:textSize="13sp"
                android:fontFamily="sans-serif-medium" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/radial_option_up_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/tv_chip_bg"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center_vertical"
            android:minHeight="42dp"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            app:layout_constraintCircle="@id/radial_menu_anchor"
            app:layout_constraintCircleAngle="315"
            app:layout_constraintCircleRadius="130dp">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/ic_guide"
                android:tint="#FFFFFFFF" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Guide"
                android:textColor="#FFFFFFFF"
                android:textSize="13sp"
                android:fontFamily="sans-serif-medium" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/radial_option_down_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/tv_chip_bg"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center_vertical"
            android:minHeight="42dp"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            app:layout_constraintCircle="@id/radial_menu_anchor"
            app:layout_constraintCircleAngle="135"
            app:layout_constraintCircleRadius="130dp">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/ic_speed"
                android:tint="#FFFFFFFF" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Speed"
                android:textColor="#FFFFFFFF"
                android:textSize="13sp"
                android:fontFamily="sans-serif-medium" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/radial_option_down_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/tv_chip_bg"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center_vertical"
            android:minHeight="42dp"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            app:layout_constraintCircle="@id/radial_menu_anchor"
            app:layout_constraintCircleAngle="45"
            app:layout_constraintCircleRadius="130dp">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/ic_seek"
                android:tint="#FFFFFFFF" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Seek"
                android:textColor="#FFFFFFFF"
                android:textSize="13sp"
                android:fontFamily="sans-serif-medium" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>
